{
  "info": {
    "name": "Express ERP MCP Server - Railway",
    "description": "Test collection dla serwera MCP na Railway",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "https://expresserpmcp-production.up.railway.app",
      "type": "string"
    },
    {
      "key": "session_id",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/health",
          "host": ["{{base_url}}"],
          "path": ["health"]
        }
      }
    },
    {
      "name": "2. Server Info",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/",
          "host": ["{{base_url}}"],
          "path": [""]
        }
      }
    },
    {
      "name": "3. Initialize Session",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "// Extract session ID from response",
              "const response = pm.response.json();",
              "if (response.result && response.result.sessionId) {",
              "    pm.collectionVariables.set('session_id', response.result.sessionId);",
              "    console.log('Session ID set to:', response.result.sessionId);",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"jsonrpc\": \"2.0\",\n  \"id\": 1,\n  \"method\": \"initialize\",\n  \"params\": {\n    \"protocolVersion\": \"2024-11-05\",\n    \"capabilities\": {},\n    \"clientInfo\": {\n      \"name\": \"postman-client\",\n      \"version\": \"1.0.0\"\n    }\n  }\n}"
        },
        "url": {
          "raw": "{{base_url}}/mcp",
          "host": ["{{base_url}}"],
          "path": ["mcp"]
        }
      }
    },
    {
      "name": "4. List Tools",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Mcp-Session-Id",
            "value": "{{session_id}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"jsonrpc\": \"2.0\",\n  \"id\": 2,\n  \"method\": \"tools/list\",\n  \"params\": {}\n}"
        },
        "url": {
          "raw": "{{base_url}}/mcp",
          "host": ["{{base_url}}"],
          "path": ["mcp"]
        }
      }
    },
    {
      "name": "5. Verify Order OP1001",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Mcp-Session-Id",
            "value": "{{session_id}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"jsonrpc\": \"2.0\",\n  \"id\": 3,\n  \"method\": \"tools/call\",\n  \"params\": {\n    \"name\": \"verify_order\",\n    \"arguments\": {\n      \"numer_zamowienia\": \"OP1001\"\n    }\n  }\n}"
        },
        "url": {
          "raw": "{{base_url}}/mcp",
          "host": ["{{base_url}}"],
          "path": ["mcp"]
        }
      }
    },
    {
      "name": "6. Verify Order OP9999 (Not Found)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Mcp-Session-Id",
            "value": "{{session_id}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"jsonrpc\": \"2.0\",\n  \"id\": 4,\n  \"method\": \"tools/call\",\n  \"params\": {\n    \"name\": \"verify_order\",\n    \"arguments\": {\n      \"numer_zamowienia\": \"OP9999\"\n    }\n  }\n}"
        },
        "url": {
          "raw": "{{base_url}}/mcp",
          "host": ["{{base_url}}"],
          "path": ["mcp"]
        }
      }
    },
    {
      "name": "7. Test Endpoint (bez MCP)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"numer_zamowienia\": \"OP1001\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/test/verify-order",
          "host": ["{{base_url}}"],
          "path": ["test", "verify-order"]
        }
      }
    },
    {
      "name": "8. Close Session",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Mcp-Session-Id",
            "value": "{{session_id}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/mcp",
          "host": ["{{base_url}}"],
          "path": ["mcp"]
        }
      }
    }
  ]
}
